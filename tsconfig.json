{
  "extends": "./node_modules/@tsconfig/node-lts/tsconfig.json",
  "compilerOptions": {
    "lib": ["es2023"],
    "module": "node16",
    "target": "es2022",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "baseUrl": "./src/modules",
    "sourceMap": true,
    "outDir": "./dist",
    "removeComments": true,
    "sourceRoot": "./src",
    "noImplicitAny": false,
    "moduleResolution": "Node16",
    "paths": {
      "@app/*": ["./*"],
      "@discovery/*": ["./discovery/*"],
      "@dns/*": ["./dns/*"]
    }
  },
}
