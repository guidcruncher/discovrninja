{
  "extends": "./node_modules/@tsconfig/node-lts/tsconfig.json",
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": "./src/modules",
    "sourceMap": true,
    "outDir": "./dist",
    "removeComments": true,
    "sourceRoot": "./src",
    "noImplicitAny": false,
    "paths": {
      "@app/*": ["./*"],
      "@discovery/*": ["./discovery/*"],
      "@dns/*": ["./dns/*"]
    }
  }
}
