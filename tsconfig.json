{
  "extends": "./node_modules/@tsconfig/node-lts/tsconfig.json",
  "compilerOptions": {
    "lib": ["es2023"],
    "module": "Node16",
    "target": "es2022",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "outDir": "./dist",
    "removeComments": true,
    "sourceRoot": "./src",
    "noImplicitAny": false,
    "moduleResolution": "Node16",
    "baseUrl": "./src/",
    "paths": {
      "@routes/*": [ "./src/routes/*" ],
      "@discovery/*": [ "./src/modules/discovery/*" ],
      "@dns/*": [ "./src/modules/dns/*" ],
      "@web/*": [ "./src/modules/web/*" ],
    }
  },
  "include": [ "./environment.d.ts", "./src/**/*.ts" ],
  "exclude": [ "node_modules", "dist" ],
}
