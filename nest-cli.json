{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": false,
    "assets": [
      {
        "include": "../config/*.yaml",
        "outDir": "./dist/src/config/",
        "watchAssets": true
      },
      {
        "include": "./src/client/",
        "outDir": "./dist/client/",
        "watchAssets": true
      }
    ]
  }
}
