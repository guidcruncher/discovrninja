{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "builder": {
      "type": "swc",
      "typeCheck": true,
      "options": {
        "swcrcPath": "./.swcrc"
      }
    },
    "deleteOutDir": false,
    "assets": [
      {
        "include": "../config/*.yaml",
        "outDir": "./dist/src/config/",
        "watchAssets": true
      },
      {
        "include": "./client/",
        "outDir": "./dist/client/",
        "watchAssets": true
      }
    ]
  }
}
