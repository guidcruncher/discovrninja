<div class="container">
  <div class="mb-3">
    <label for="templates">Template catalog</label>
    <select class="form-select" aria-label="Catalogs" id="templates">
      <option>Choose a template catalog to load.</option>
      {{#each this.catalogs}}
        <option {{#when id "eq" ../selected.id}}selected{{/when}} value="{{id}}">{{name}}</option>
      {{/each}}
    </select>
  </div>
  <div class="mb-3"><button class="btn btn-primary" onclick="viewCatalog(); return false;"><i class="fa-solid fa-eye"></i> View</button>
    &nbsp;
    <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#importModal"><i class="fa-solid fa-cloud-arrow-up"></i> Import</button>
  </div>
  <hr />

  <div class="accordion accordion-flush" id="accordionFlushExample">
    <div class="accordion-item">
      <h2 class="accordion-header">
        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#tabcategories" aria-expanded="false" aria-controls="tabcategories">
          Categories
        </button>
      </h2>
      <div id="tabcategories" class="accordion-collapse collapse" data-bs-parent="#accordian">
        <div class="accordion-body" style="max-height:200px; overflow-y: auto;">
          <div class="row">
            <ul class="cloud" role="navigation" aria-label="Categories">
              {{#each this.feed.categories}}
                <li><a data-weight="{{this}}" href="#" onclick="filterCatalog('{{../selected.id}}', '{{@key}}');">{{@key}}</a></li>
              {{/each}}
            </ul>
          </div>
        </div>
      </div>
    </div>
    <div class="accordion-item">
      <h2 class="accordion-header">
        <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#tablisting" aria-expanded="true" aria-controls="tablisting">
          Catalog
        </button>
      </h2>
      <div id="tablisting" class="accordion-collapse collapse show" data-bs-parent="#accordion">
        <div class="accordion-body">
          <div class="row">
            {{#each this.feed.templates}}
              <div class="col-sm-6 mb-3 mb-sm-0" style="padding-bottom:5px;">
                <div class="card" style="wi dth: 18rem;">
                  <img style="max-height:100px;max-width:100px;padding:5px;" src="{{logo}}" class="card-img-top" alt="{{title}}">
                  <div class="card-body">
                    <h5 class="card-title">{{title}}</h5>
                    <p class="card-text">{{{description}}}</p>
                    <a href="#" onclick="provisionTemplate(this);return false;" data-catalog="{{../selected.id}}" data-name="{{name}}" class="btn btn-primary">Setup</a>
                  </div>
                </div>
              </div>
            {{/each}}
          </div>
        </div>
      </div>
    </div>
  </div>


  <div class="modal fade" id="importModal" tabindex="-1" aria-labelledby="importModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title fs-5" id="importModalLabel">Import catalog</h1>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <div class="mb-3">
            <label for="templateTitle" class="form-label">Name</label>
            <input type="text" class="form-control" id="templateTitle" placeholder="">
          </div>
          <div class="mb-3">
            <label for="templateUrl" class="form-label">Catalog Web Address</label>
            <input type="url" class="form-control" id="templateUrl" placeholder="">
          </div>
        </div>
        <div class="modal-footer">
          <button onclick="clearImportCatalog();" type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          <button onclick="importCatalog();" type="button" class="btn btn-primary">Save changes</button>
        </div>
      </div>
    </div>
  </div>
