<table class="table table-striped table-sm">
  <caption>Container States<caption>
    <thead>
  <tr>
    <th></th>
    <th>Name</th>
    <th>State</th>
    <th>CPU</th>
    <th>Memory</th>
    <th>% Free</th>
    <th>Uptime</th>
  </tr>
  </thead>
  <tbody>
    {{# each this}}
      <tr>
        <td>
          <a {{#if publicUrl}}href="{{publicUrl}}" target="_new" class="btn btn-outline-secondary btn-sm" {{else}} class="btn btn-outline-secondary btn-sm  disabled" {{/if}}><i class="fa-solid fa-link"></i></a>
          <a href="#" data-containerid="{{name}}" {{#if publicUrl}} onclick="changeIcon(this); return false;" class="btn btn-outline-secondary btn-sm" {{else}}class="btn btn-outline-secondary btn-sm disabled" {{/if}}><i class="fa-regular fa-font-awesome"></i></a>
          <a href="#" data-containerid="{{name}}" onclick="exportContainer(this); return false;" class="btn btn-outline-secondary btn-sm"><i class="fa-solid fa-file-export"></i></a>
        </td>
        <td><a href="#" data-containerid="{{id}}" {{#if healthy}}{{else}}class="text-danger-emphasis" {{/if}} onclick="containerInfo(this);return false;">{{name}}</a></td>
        <td align="center" {{#if healthy}}{{else}}class="text-danger-emphasis" {{/if}}><i class="{{stateCss}}" data-bs-toggle="tooltip" data-bs-title="{{status}}"></i>
        </td>
        <td {{#if healthy}}{{#if cpuAlert}}class="text-danger" {{/if}}{{else}}class="text-danger-emphasis" {{/if}}>
          {{#if shutdown }}-{{else}}{{stats.cpuPercentStr}}{{/if}}
        </td>
        <td {{#if healthy}}{{else}}class="text-danger-emphasis" {{/if}}>{{#if shutdown}}-{{else}}{{stats.memoryUsageStr}}{{/if}}</td>
        <td {{#if healthy}}{{#if memoryAlert}}class="text-danger" {{/if}}{{else}}class="text-danger-emphasis" {{/if}}>{{#if shutdown}}-{{else}}{{stats.memoryFreePercentStr}}{{/if}}</td>
        <td><span class="{{colorLevel}}">{{uptimeSecondsPercent}}</span></td>
      </tr>
      {{/each}}
  </tbody>
  <tfoot>
  </tfoot>
</table>
{{now}}
