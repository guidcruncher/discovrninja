<div class="accordion" id="projects">
  {{#each this}}
    <div class="accordion-item">
      <h2 class="accordion-header">
        <button class="accordion-button{{#if @first}}{{else}} collapsed{{/if}}" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-{{@index}}" aria-expanded="true" aria-controls="collapse-{{@index}}">
          {{@key}}
        </button>
      </h2>
      <div id="collapse-{{@index}}" class="accordion-collapse collapse{{#if @first}} show{{/if}}" data-bs-parent="#projects">
        <div class="accordion-body">
          <div class="container text-left">
            <div class="row justify-content-md-left">
              <div class="col col-lg-2">
                <img style="max-width:128px;" src="/api/icons/query/{{@key}}" />
              </div>
              <div class="col-md-auto">
                <table class="table table-bordered">
                  <tbody>
                    <tr>
                      <td>Compose file:</td>
                      <td>{{config}}</td>
                    </tr>
                    <tr>
                      <td>Environment file:</td>
                      <td>{{environment}}</td>
                    </tr>
                    <tr>
                      <td>Project Folder :</td>
                      <td>{{workingFolder}}</td>
                    </tr>
                  </tbody>
                </table>

                <table class="table">
                  <thead>
                    <tr>
                      <th>Container Name</th>
                      <th>Hostname</th>
                    </tr>
                  </thead>
                  <tbody>
                    {{#each this.containers}}
                      <tr>
                        {{#if editable}}
                          <td><button onclick="composeEdit(this); return false;" data-containerid="{{containerName}}" data-projectpath="{{../projectPath}}" data-project="{{projectName}}" type="button" class="btn btn-outline-secondary btn-sm"><i class="fa-regular fa-pen-to-square"></i></button></td>
                        {{/if}}
                        <td>{{containerName}}</td>
                        <td>{{hostname}}</td>
                      </tr>
                    {{/each}}
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  {{/each}}
</div>
