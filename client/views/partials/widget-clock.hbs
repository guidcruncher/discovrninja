<script type="text/javascript">
  var clockModal = document.getElementById("analogClockModal{{settings.id}}");
  if (clockModal) {} else {
    var clockModal = app.templates.modalanalogclock({
      tz: "{{settings.tz}}",
      id: "{{settings.id}}"
    });
    $(document.body).append(clockModal);
  }

</script>
<button class="btn {{# isempty parent.buttonclass}}btn-secondary{{else}}{{parent.buttonclass}}{{/isempty}} widget" style="{{#isnotempty parent.opacity}}opacity:{{parent.opacity}} !important;{{/isnotempty}}" data-bs-toggle="modal" data-bs-target="#analogClockModal{{settings.id}}">

  <object style="background:transparent;pointer-events:none;width:90px;height:90px;" data="/assets/img/clock.svg" type="image/svg+xml">
    <param name="tz" value="{{settings.tz}}" />
  </object>

</button>
