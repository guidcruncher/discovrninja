  <title>DiscovrNinja!</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
  {{# if desktop.theme }}
    <link rel="stylesheet" href="{{desktop.theme}}">
    {{else}}
      <link rel="stylesheet" href="/assets/themes/bootstrap5.3.3/bootstrap.min.css">
      {{/if}}
      <script src="https://cdnjs.cloudflare.com/ajax/libs/showdown/2.1.0/showdown.min.js"></script>
      <link rel="stylesheet" href="/assets/css/style.css">
      <script src="/desktop.js" type="text/javascript"></script>
      <script src="https://cdn.jsdelivr.net/npm/echarts@5.5.1/dist/echarts.min.js"></script>
      <script src="https://cdn.jsdelivr.net/npm/axios@1.6.7/dist/axios.min.js"></script>
      <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
      <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/js/all.min.js" integrity="sha512-b+nQTCdtTBIRIbraqNEwsjB6UvL3UEMkXnhzd8awtCYh0Kcsjl9uEgwVFVbhoj3uu1DO1ZMacNvLoyJJiNfcvg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
      <script src="/assets/js/main.min.js"></script>
</head>

<body>
  <div>
    <div class="desktop-themechooser">
      <div class="desktop-themechooser-item">
        <button class="btn btn-sm btn-outline-secondary text-white" onclick="logout();">
          <i class="fa-solid fa-power-off"></i>
        </button>
        <button data-theme="dark" onclick="chooseDesktopTheme('dark');return false;" class="btn btn-sm btn-outline-secondary text-white" text-secondary">
          <i id="dark" class="bi bi-moon-stars"></i>
        </button>
        <button data-theme="light" onclick="chooseDesktopTheme('light');return false;" class="btn btn-sm btn-outline-secondary text-white">
          <i id="light" class="bi bi-sun"></i>
        </button>
        <button data-theme="auto" onclick="chooseDesktopTheme('auto');return false;" class="btn btn-sm btn-outline-secondsry text-white">
          <i class="bi bi-display"></i>
        </button>
      </div>
    </div>
    <div class="container" style="padding-top:5px; padding-bottom:5px">
      {{{body}}}
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script type="text/javascript">
      ui().desktop();
      ui().themeChooser().setTheme();

    </script>
    {{>messagebox}}
  </div>
</body>

</html>
