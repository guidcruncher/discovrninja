<button data-url="{{settings.url}}" onclick="navigateTo(this); return false;" type="button" class="btn {{# isempty parent.buttonclass}}btn-secondary{{else}}{{parent.buttonclass}}{{/isempty}} widget" style="{{#isnotempty parent.opacity}}opacity:{{parent.opacity}} !important;{{/isnotempty}}">
  <img style="padding:10px;max-width:64px;max-height:64px" src="{{#isempty settings.iconSlug}}https://www.google.com/s2/favicons?domain={{settings.domainUrl}}&sz=64{{else}}/api/icons/r/{{settings.iconCatalog}}/{{settings.iconSlug}}/resource{{/isempty }}" />
  <br /> {{settings.name}}
</button>
