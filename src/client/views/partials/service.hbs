<a role="button" {{# if service.monitor}}{{#if service.available}}{{else}}disabled aria-disabled="true" {{/if}}{{/if}} data-name="{{service.containerName}}" data-url="{{service.public}}" href="{{service.public}}" class="btn {{# isempty parent.buttonclass}}btn-secondary{{else}}{{parent.buttonclass}}{{/isempty}} widget" style="position: relative !imporant;{{#isnotempty parent.opacity}}opacity:{{parent.opacity}} !important;{{/isnotempty}}" target="_blank">
  <div style="position:relative;">
    <div style="text-align: center;padding:10px;width:100%;height:64px;">
      <img style="width:64px;max-height:64px" src="{{#isempty service.iconSlug}}/api/icons/question{{else}}/api/icons/r/{{service.iconCatalog}}/{{service.iconSlug}}/resource{{/isempty }}" />
    </div>
    <div style="padding:10px;">{{service.name}}</div>
    {{#if service.monitor}}
      <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-primary bg-gradient">
        {{#if service.available}}
          <span class="badge border border-light rounded-circle bg-success p-2"> </span>
        {{else}}
          <span class="badge border border-light rounded-circle bg-danger p-2"> </span>
        {{/if}}
      </span>
    {{/if}}
  </div>
</a>
