<!doctype html>
<html lang="{{#if lang}}{{lang}}{{else}}en{{/if}}">

<head>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Cardo:ital,wght@0,400;0,700;1,400&family=Roboto:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
  <meta http-equiv="cache-control" content="max-age=0" />
  <meta http-equiv="cache-control" content="no-cache" />
  <meta http-equiv="cache-control" content="no-store" />
  <meta http-equiv="expires" content="0" />
  <meta http-equiv="expires" content="Tue, 01 Jan 1980 1:00:00 GMT" />
  <meta http-equiv="pragma" content="no-cache" />
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="shortcut icon" href="#" />
  <title>DiscovrNinja!</title>
  {{# if desktop.theme }}
    <link rel="stylesheet" href="{{desktop.theme}}">
    {{else}}
      <link rel="stylesheet" href="/assets/themes/bootstrap5.3.3/bootstrap.min.css">
      {{/if}}
      <link rel="stylesheet" href="/assets/css/style.css">
      <script src="/desktop.js" type="text/javascript"></script>
      <script src="/assets/js/main{{#if prod}}.min{{/if}}.js"></script>
      <style type="text/css">
        .cardo-regular {
          font-family: "Cardo", serif;
          font-weight: 400;
          font-style: normal;
        }

        .cardo-bold {
          font-family: "Cardo", serif;
          font-weight: 700;
          font-style: normal;
        }

      </style>
</head>

<body>
  <div>
    <div class="desktop-themechooser">
      <div class="desktop-themechooser-item">
        <button class="btn btn-sm btn-outline-secondary text-white" onclick="logout();">
          <i class="fa-solid fa-power-off"></i>
        </button>
        <button data-theme="dark" onclick="chooseDesktopTheme('dark');return false;" class="btn btn-sm btn-outline-secondary text-white" text-secondary">
          <i id="dark" class="bi bi-moon-stars"></i>
        </button>
        <button data-theme="light" onclick="chooseDesktopTheme('light');return false;" class="btn btn-sm btn-outline-secondary text-white">
          <i id="light" class="bi bi-sun"></i>
        </button>
        <button data-theme="auto" onclick="chooseDesktopTheme('auto');return false;" class="btn btn-sm btn-outline-secondsry text-white">
          <i class="bi bi-display"></i>
        </button>
      </div>
    </div>

    <div class="container" style="padding-top:5px; padding-bottom:5px">
      {{{body}}}
    </div>

    <script type="text/javascript">
      ui().desktop();
      ui().themeChooser().setTheme();

    </script>
    {{>messagebox}}
  </div>
  {{isdebug this}}
</body>

</html>
