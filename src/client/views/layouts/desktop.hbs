<!doctype html>
<html lang="{{#if lang}}{{lang}}{{else}}en{{/if}}">

<head>
  <script src="https://cdn.jsdelivr.net/npm/@fortawesome/fontawesome-free@6.7.2/js/all.min.js"></script>
  <link href="https://cdn.jsdelivr.net/npm/@fortawesome/fontawesome-free@6.7.2/css/fontawesome.min.css" rel="stylesheet">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Cardo:ital,wght@0,400;0,700;1,400&family=Roboto:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
  <meta http-equiv="cache-control" content="max-age=0" />
  <meta http-equiv="cache-control" content="no-cache" />
  <meta http-equiv="cache-control" content="no-store" />
  <meta http-equiv="expires" content="0" />
  <meta http-equiv="expires" content="Tue, 01 Jan 1980 1:00:00 GMT" />
  <meta http-equiv="pragma" content="no-cache" />
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="shortcut icon" href="#" />
  <title>DiscovrNinja!</title>
  {{# if desktop.theme }}
    <link rel="stylesheet" href="{{desktop.theme}}">
    {{else}}
      <link rel="stylesheet" href="/assets/themes/bootstrap5.3.3/bootstrap.min.css">
      {{/if}}
      <link rel="stylesheet" href="/assets/css/style.css">
      <script src="/desktop.js" type="text/javascript"></script>
      <script src="/assets/js/main{{#if prod}}.min{{/if}}.js"></script>
</head>

<body {{#if desktop.background.isimage}} onload="loadBackground({{#if desktop.background.dynamic}}{{desktop.background.dynamic}}, {{desktop.background.reloadIntervalMinutes}}{{else}}false, 0{{/if}}, '{{desktop.background.url}}');" {{/if}}>
  <div id="bgimage" class="{{desktop.background.cssclass}}" {{desktopbackground desktop.background}}>
    {{#if desktop.header.visible}} {{>desktopheader}}{{else}}
      <div class="desktop-themechooser">
        <div class="desktop-themechooser-item">

          <button class="btn btn-sm btn-outline-secondary text-white" onclick="logout();">
            <i class="fa-solid fa-power-off"></i>
          </button>
          <button class="btn btn-sm btn-outline-secondary text-white" onclick="admin();">
            <i class="fa-solid fa-screwdriver-wrench"></i>
          </button>

          <button data-theme="dark" onclick="chooseDesktopTheme('dark');return false;" class="btn btn-sm btn-outline-secondary text-white">
            <i id="dark" class="fa-regular fa-moon"></i>
          </button>
          <button data-theme="light" onclick="chooseDesktopTheme('light');return false;" class="btn btn-sm btn-outline-secondary text-white">
            <i id="light" class="fa-regular fa-sun"></i>
          </button>
          <button data-theme="auto" onclick="chooseDesktopTheme('auto');return false;" class="btn btn-sm btn-outline-secondsry text-white">
            <i class="fa-solid fa-display"></i>
          </button>
        </div>
      </div>
    {{/if}}
    <div class="container" style="padding-top:5px; padding-bottom:5px">
      {{{body}}}
    </div>

    <script type="text/javascript">
      ui().desktop();
      ui().themeChooser().setTheme();
      ui(".hbs-template").template();

    </script>
    {{>messagebox}}
  </div>

  <script type="text/javascript">
    $(document).ready(function () {
      $('.datatable').DataTable({
        paging: false,
        searching: false
      });
    });

  </script>
{{#if debug}}<hr/><pre>{{debug this}}</pre>{{/if}}
</body>
</html>
